    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <HBox spacing="10">
            <Label text="Semestre:"/>
            <TextField fx:id="semestreField"/>
            <Label text="HorÃ¡rio:"/>
            <TextField fx:id="horarioField"/>
